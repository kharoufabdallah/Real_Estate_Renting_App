<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SigningActivity"
    android:background="@drawable/index">

    <TextView
        android:id="@+id/welcome_sign"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="        Signing Activity"
        android:textSize="36sp" />

    <fragment
        android:id="@+id/sign_in_frag"
        android:name="com.example.renting_app.Sign_in_Frag"
        android:layout_width="match_parent"
        android:layout_height="268dp" />

    <fragment
        android:id="@+id/sign_up_frag"
        android:name="com.example.renting_app.Sign_up_Frag"
        android:layout_width="match_parent"
        android:layout_height="343dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sign_inB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign in" />

        <Button
            android:id="@+id/sign_upB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sign up"
            app:iconTint="#6C0B0B" />
    </LinearLayout>

</LinearLayout>